<% unless logged_in? %>
  <li class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
      Welcome, <%= get_current_user.username%>
      <b class="caret"></b>
    </a>
    <ul class="dropdown-menu">
      <li><%= link_to "Edit my profile", edit_user_url(get_current_user) %></li>
      <li class="divider"></li>
      <li><%= link_to "Sign Out", session_url, method: :delete %>
    </ul>
  </li>
<!--
  <li><img class="img-responsive img-circle" src="<%#= get_current_user.photo_url.url(:small) %>"/></li>
-->
<% else %>
<li class="dropdown">
  <a href="#" class="dropdown-toggle" data-toggle="dropdown">My Account <b class="caret"></b></a>
  <ul class="dropdown-menu">
    <li>
      <div>
      <form action="<%= session_url %>" method="POST">
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>"/>
        <input type="hidden" name="user[username]" value="guest"/>
        <input type="hidden" name="user[password]" value="guest@kicksmix"/>
        <input type="submit" value="Sign in as guest" class="btn btn-link"/>
      </form>
      </div>
    </li>
    <li><%= link_to "Sign into my account", new_session_url %></li>
    <li class="divider"></li>
    <li><%= link_to "Register", new_user_url %></li>
  </ul>
</li>
<% end %>

