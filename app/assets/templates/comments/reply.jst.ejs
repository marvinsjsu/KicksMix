<% var user_id = $("#current_user").attr("class"); %>

<% if (user_id > 0) { %>
<button class="btn btn-link" data-toggle="modal" data-target="#reply-comment-modal-<%= comment.get("id")%>">
  Reply
</button>
<% } %>

<div id="reply-comment-modal-<%= comment.get("id")%>" class="modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-body">
      <div class="form-group row">
        <div class="col-lg-12">

          <form id="reply-comment-form">
          <input type="hidden" id="user-needed" name="comment[comments_by]"
          value="<%= user_id %>"/>
          <input type="hidden" name="comment[model]" value="comment" />
          <textarea class="form-control" rows="4" name="comment[content]"></textarea>
          <br/>
          <button type="button" class="btn btn-default btn-sml" data-dismiss="modal">Close</button>
          <button type="reset" class="btn btn-default btn-sml">Reset</button>
          <input id="save-comment" type="submit" class="btn btn-primary btn-sml" value="Submit"/>
          </form>

        </div>
      </div>
      </div>
    </div>
  </div>
</div>


