<% var user = JSON.parse($("#bootstrapped_current_user_json").html()) %>

<% if (user.current_user && shoe.get("author")) { %>

  <% if (user.current_user.id === shoe.get("author").id) { %>
    <button id="edit-shoe-review-button" class="btn btn-link btn-md" data-toggle="modal" data-target="#edit-shoe-modal">
    Edit Shoe Review
  </button>
  <% } %>
<% } %>

<div id="edit-shoe-modal" class="modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-body">

      <div class="form-group row">

        <div class="col-xs-12">

          <form id="add-review" class="form-horizontal" enctype="multipart/form-data">
            <fieldset>
              <legend>Edit Shoe Review</legend>
              <div class="form-group">
                <label for="shoe_name" class="col-lg-2 control-label">Shoe Name</label>
                <div class="col-lg-10">
                  <input type="text" name="shoe[name]" class="form-control" id="shoe_name" placeholder="shoe name" value="<%= shoe.escape("name") %>"required>
                </div>
              </div>

              <div class="form-group">
                <label for="shoe_brand" class="col-lg-2 control-label">Brand</label>
                <div class="col-lg-10">
                  <select class="form-control" id="shoe_brand" name="shoe[brand]">
                    <option id="add-category">Add new brand</option>
                    <option value="Air Jordan">Air Jordan</option>
                    <option value="Nike">Nike</option>
                    <option value="Adidas">Adidas</option>
                    <option value="New Balance">New Balance</option>
                  </select>
                </div>
              </div>
              <div class="form-group">
                <label for="shoe_price" class="col-lg-2 control-label">Price</label>
                <div class="col-lg-10">
                  <input type="text" name="shoe[price]" class="form-control" id="shoe_price" value="<%= shoe.escape("price") %>" placeholder="price">
                </div>
              </div>

              <div class="form-group">
                <label for="shoe_category" class="col-lg-2 control-label">Category</label>
                <div class="col-lg-10">
                  <select class="form-control" id="shoe_category" name="shoe[category]">
                    <option id="add-category">Add category</option>
                    <option value="casual">Casual</option>
                    <option value="formal">Formal</option>
                    <option value="basketball">Basketball</option>
                    <option value="running">Running</option>
                    <option value="tennis">Tennis</option>
                  </select>
                </div>
              </div>

              <div class="form-group">
                <label for="shoe_review" class="col-lg-2 control-label">Review</label>
                <div class="col-lg-10">
                  <textarea id="pen-mode" class="form-control" rows="5" id="shoe_review" name="shoe[review]"><%= shoe.escape("review") %></textarea>
                  <span class="help-block">
                    Post shoe review here.
                  </span>
                </div>
              </div>

              <div class="form-group">
                <label for="shoe_photo" class="col-lg-2 control-label">Photo</label>
                <div class="col-lg-10">
                  <input type="file" id="shoe_photo" name="shoe[shoe_photo]" multiple accept="image/png,image/gif,image/jpeg" class="btn btn-primary"/>
                </div>
              </div>

              <div class="form-group">
                <div class="col-lg-10 col-lg-offset-2">
                  <button type="button" class="btn btn-link btn-sml" data-dismiss="modal">Close</button>
                  <input type="reset" class="btn btn-link" value="Reset">
                  <input type="submit" class="btn btn-link" value="Submit">
                </div>
              </div>
            </fieldset>
          </form>
      </div>
      </div>
      </div>
    </div>
  </div>
</div>


