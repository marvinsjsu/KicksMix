<div class="row">
  <div class="col-xs-9">
  <div class="panel panel-primary">
    <div class="panel-heading">
      <h3 class="panel-title"><%= shoe.escape("name") %> by <a class="author-page" href="<%= shoe.author_url %>"><%= shoe.author %></a></h3>
    </div>
    <div class="panel-body">
      <div class="row">
        <div class="col-xs-4">
          <img src="<%= shoe.escape("shoe_photo") %>" class="img-responsive"/>
        </div>
        <div class="col-xs-7">
          <%= shoe.escape("review") %>
        </div>
      </div>
    </div>
  </div>
  </div>
</div>

<div class="row">
  <div class="col-xs-5">
  <!-- Button trigger modal -->
  <button class="btn btn-primary btn-sm" data-toggle="modal" data-target="#comment-form">
    Add Comment
  </button>
    <ul>
    <% shoe.comments().each(function(comment){ %>
      <li><%= comment.escape("content") %>
         by <a class="author-page" href="localhost:3000/users/<%= JSON.stringify(comment.get("author").id) %>" >
         <%= JSON.stringify(comment.get("author").username) %>
         </a>
      </li>
      <li><a class="add-reply"href="">Reply to this comment</a></li>
    <% }) %>
    </ul>
  </div>
</div>

<div id="comment-form" class="modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-body">
      <div class="form-group row">
        <div class="col-lg-12">
          <form id="add-comment-form">
          <textarea class="form-control" rows="4" name="comment[content]"></textarea>
          <br/>
          <button type="button" class="btn btn-default btn-sml" data-dismiss="modal">Close</button>
          <button type="reset" class="btn btn-default btn-sml">Reset</button>
          <button type="button" class="btn btn-primary btn-sml">Save changes</button>
          </form>
        </div>
      </div>
      </div>
    </div>
  </div>
</div>