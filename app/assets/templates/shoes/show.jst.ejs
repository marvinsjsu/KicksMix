<div class="container">
  <div class="col-xs-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <div class="row">
          <div class="col-xs-6">
            <img src="<%= shoe.escape("shoe_photo_lg") %>" class="img-responsive"/>
            <br/>
            <div class="panel panel-default col-xs-12">
              <div class="panel-heading centered"> the mix </div>
              <div class="panel-body">
                <div id="mix-n-match-section" class="row"></div>
              </div>
            </div>
            <br/>
          </div>
          <div class="col-xs-6">
            <h2><%= shoe.escape("name") %></h2>

             <p>
               <%= shoe.escape("tagline") %>
             </p>

            <div class="panel panel-default col-xs-12">
              <div class="panel-heading centered">details</div>
              <div class="panel-body">
              <div class="list-group row">
                  <div class="col-xs-4">

                    <h4 class="list-group-item-heading"><%= shoe.escape("brand") %></h4>
                    <h4 class="list-group-item-heading"><%= shoe.escape("category") %></h4>
                    <h4 class="list-group-item-heading">$<%= shoe.escape("price") %></h4>

                  </div>
                  <div class="col-xs-8">

                    <%= shoe.escape("review") %>

                  </div>

              </div>
              </div>
            </div>

            <div class="panel panel-default col-xs-12">
              <div class="panel-heading centered">liked this shoe</div>
              <div class="panel-body">
                <div id="likes-by-section" class="row"></div>
              </div>
            </div>

            <div id="comment-form">
              <ul id="shoe-navigation" class="nav nav-pills"></ul>
            </div>

            <div class="panel panel-default col-xs-12">
              <div class="panel-heading centered">conversation</div>
              <div class="panel-body">
                <div class="row">
                  <div class="col-xs-12">
                    <div id="comments"></div>
                  </div>
              </div>
              </div>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>


